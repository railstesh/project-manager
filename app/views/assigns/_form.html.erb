<div class = "mt-4 pl-4"> 
  <%= simple_form_for @assign do |form| %>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :project_id, collection: Project.all, label: 'Project', prompt: 'Select Project', input_html: { class: 'select2' } %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.label :Employee %>
        <%= form.select :employee_id, options_from_collection_for_select(Employee.all, :id, :name_with_status), {}, {class: 'select2'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :assigned_as, collection: Assign.assigned_as.keys, prompt: 'Select Assigned_as', input_html: { class: 'select2' } %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :billing_hours, label: 'Assigned Hours' %>
      </div>
    </div>
    <div class="text-right">
      <%= form.submit "Save", class: 'btn btn-success' %>
      <%= link_to 'Back', assigns_path, method: :get, class: "btn btn-success"%>
    </div>
  <% end %>
</div>