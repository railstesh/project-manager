<div class="right-section">
  <div class="right-top-section">
    <h3 class="mt-4 d-flex justify-content-center"> List of Inactive Assign Projects </h3>
  </div>
  <div class="ml-3 mr-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Project</th>
          <th>Assigned</th>
          <th>Billing Hrs</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @assigns.each do |assign| %>
          <tr>
            <td><%= assign.project&.title %></td>
            <td><%= assign.employee&.name %></td>
            <td><%= assign.billing_hours %></td>
            <td><%= assign.status %></td>
            <td>
        			<%= link_to 'Restore', restore_assign_path(assign), remote: true, method: :delete, data: { confirm: "Are you sure want to restore?" }, class: 'color-red' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>