<div class = "mt-4 pl-4"> 
  <%= simple_form_for @crediential do |form| %>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :crediential_type_id, collection: CredientialType.all, label: 'Crediential Type', prompt: 'Select Crediential Type', input_html: { class: 'select2' } %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :project_id, collection: Project.all, label: 'Project', prompt: 'Select Project', input_html: { class: 'select2' } %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :url %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :username %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :email %>
      </div>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.input :password, as: :string %>
      </div>
    </div>
    <div class="text-right">
      <%= form.submit "Save", class: 'btn btn-success' %>
      <%= link_to 'Back', credientials_path, method: :get, class: "btn btn-success"%>
    </div>
  <% end %>
</div>