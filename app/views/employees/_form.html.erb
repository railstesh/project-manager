<div class = "mt-4 pl-4">	
	<%= simple_form_for @employee do |form| %>
	  <%= form.input :name %>
	  <%= form.input :email %>
	  <%= form.input :stack %>
	  <%= form.input :skills %>
	  <div class="text-right">
		  <%= form.submit "Save", class: 'btn btn-success' %>
		  <%= link_to 'Back', employees_path, method: :get, class: "btn btn-success"%>
		</div>
	<% end %>
</div>