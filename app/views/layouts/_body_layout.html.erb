            </li>

            <li class="sidebar-menu">
              <div class="sidebar-icons"><i class="fa fa-language" aria-hidden="true"></i></div>
              <%= link_to "Technologies", technologies_path %>
            </li>

            <li class="dropdown sidebar-menu">
              <div class="sidebar-icons"><i class="fa fa-user" aria-hidden="true"></i></div>
              <a href="#" data-toggle="dropdown" class="dropdown-toggle" >Employees</a>
                <ul class="dropdown-menu">
                  <li class="sidebar-menu">
                    <div class="sidebar-icons"><i class="fa fa-toggle-on" aria-hidden="true"></i></div>
