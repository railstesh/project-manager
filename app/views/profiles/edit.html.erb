<div class="right-section">
  <h3> Edit Profile </h3>
  <%= simple_form_for @profile do |f| %>
    <%= render partial: 'form', locals: {form: f}%>
    <div class="text-right">
      <%= f.submit "Save", class: 'btn btn-success' %>
      <%= link_to 'Back', profiles_path, method: :get, class: "btn btn-success"%>
    </div>
  <% end %>
</div>