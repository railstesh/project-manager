<div class="right-section">
  <div class="right-top-section">
    <h3> List of Inactive Projects </h3>
  </div>
  <div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Client Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.client_name %></td>
            <td>
              <%= link_to '', restore_project_path(project), remote: true, method: :delete, data: { confirm: "Are you sure want to restore?" }, class: 'fa fa-history' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @projects %>
  </div>
</div>