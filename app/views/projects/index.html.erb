<div class="right-section">
  <div class="right-top-section">
    <h3> List of Active Projects </h3>
    <%= link_to 'Create', new_project_path, method: :get, class: "btn btn-primary"%>
  </div>
  <div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Client Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.client_name %></td>
            <td>
              <%= link_to '', project_path(project), class: 'glyphicon glyphicon-eye-open' %>
        			<%= link_to '', edit_project_path(project), class: 'glyphicon glyphicon-pencil' %>
        			<%= link_to '', project_path(project), remote: true, method: :delete, data: { confirm: "Are you sure want to delete?" }, class: 'glyphicon glyphicon-trash' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @projects %>
  </div>
</div>