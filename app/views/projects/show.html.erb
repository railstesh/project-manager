<div class="right-section">
  <div class="right-top-section">
    <h3> Project Details:</h3>
  </div>
  <ul>
    <li> Project Name: <%= @project.title %> </li>
    <li> Client Name: <%= @project.client_name %> </li>
    <li> Profile: <%= @project.profile.name %> </li>
    <li> Technology: <%= @project.technology.name %> </li>
    <li> Invoice Type: <%= @project.invoice_type %> </li>
    <li> Work Limit: <%= @project.work_limit %> </li>
  </ul>

  <h3> Assign User: </h3>
  <p class="assign"></p>
  <%= simple_form_for @project do |f| %>
    <%= f.simple_fields_for :assigns do |form| %>
      <%= render partial: 'assign_fields', locals: {f: form} %>
    <% end %>
    <%= link_to_add_association 'Add', f, :assigns, data: {"association-insertion-node" => "p.assign", "association-insertion-method" => "append"} %>
    <div class="text-right">
      <%= f.submit "Save", class: 'btn btn-success' %>
      <%= link_to 'Back', projects_path, method: :get, class: "btn btn-success"%>
    </div>
  <% end %>
</div>