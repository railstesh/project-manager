<div class="right-section">
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xs-12 show-bar">
      <div class="right-top-section">
        <h4> Project Details:</h4>
      </div>
      <ul>
        <li> Project Name: <%= @project.title %> </li>
        <li> Client Name: <%= @project.client_name %> </li>
        <li> Profile: <%= @project.profile.name %> </li>
        <li> Technologies: <%= @project.technologies.join(', ') %> </li>
        <li> Invoice Type: <%= @project.invoice_type %> </li>
        <li> Work Limit: <%= @project.work_limit %> </li>
      </ul>
    </div>

    <div class="col-md-9 col-sm-9 col-xs-12">
      <h4> Assign User: </h4>
      <%= simple_form_for @project do |f| %>
        <div class="row add-assign">
          <div id="assigns">
            <%= f.simple_fields_for :assigns do |form| %>
              <%= render partial: 'assign_fields', locals: {f: form} %>
            <% end %>
            <div class="links text-right add-button">
              <%= link_to_add_association 'Assign Users', f, :assigns %>
            </div>
          </div>
        </div>

        <div class="text-right">
          <%= f.submit "Save", class: 'btn btn-success' %>
          <%= link_to 'Back', projects_path, method: :get, class: "btn btn-success"%>
        </div>
      <% end %>
    </div>
  </div>
</div>